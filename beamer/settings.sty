%%% Date Time %%%
\usepackage{datetime}
\newtimeformat{zeit}%
{\twodigit{\THEHOUR}:\twodigit{\THEMINUTE}:\twodigit{\THESECOND}}
\settimeformat{zeit}%
\newdateformat{meinesdatum}
{\THEYEAR-\twodigit{\THEMONTH}-\twodigit{\THEDAY}}
\setdefaultdate{\meinesdatum}
